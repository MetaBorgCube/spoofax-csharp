module Tests

language CSharpPartialClassses

setup Header [[
  using Hidden;
  
	namespace Tests {
    class A {
      P p;
    }
    
    partial class P {
      string a;
      int i;
    }
	}
	
	namespace Hidden {
	  class H {
	    H h;
	  }
	}
]]

test Resolve property access [[
  namespace Tests {
	  partial class P {
	    int n;
	  }
	    
	  class B {
	  	A a;
	  	
	    int b() {
	    	return a.p.n;
	    }
	  }
  }
]]

test Resolve property access fails [[
  namespace Tests {
    partial class P {
      int n;
    }
      
    class B {
      A a;
      
      int b() {
        return a.p.x;
      }
    }
  }
]] 1 error 

test Resolve function call [[
  namespace Tests {
	  partial class P {
	    string Geta() { return a; }
	  }
	  
	  class B {
      P p;
      
      string f() {
        return p.Geta();
      }
    }
  }
]]

